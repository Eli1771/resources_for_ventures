<h1>Create new study materials</h1>

<%= form_for :material do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label 'Description (optional)' %>
  <%= f.text_field :description %><br>
  <%= f.label :url %>
  <%= f.text_field :url %><br>
  <%= f.label 'Course Level' %>
  <%= f.collection_select :course_id, Course.all, :id, :name %><br>

  <%= f.submit %>
<% end %>
