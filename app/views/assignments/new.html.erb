<h1>Create an assignment</h1>

<%= form_for :assignment, {url: '/assignments'} do |f| %>
  <input type="hidden" value="<%= session[:user_id] %>" id="creator_id" name="assignment[creator_id]">
  <%= f.label 'For' %>
  <%= f.collection_select :user_id, User.students, :id, :name %><br>
  <%= f.label 'Material' %>
  <%= f.collection_select :material_id, Material.all, :id, :name %><br>

  <%= f.submit %>
<% end %>
