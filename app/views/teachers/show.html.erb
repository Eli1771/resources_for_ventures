<h1>Teacher Homepage</h1>
<h3><%= @teacher.name %></h3>
<h3><%= @teacher.course.name %></h3>

<% if viewing_current_user?(@teacher) %>
  <p>Your assignments</p>
  <ul>
    <% @assignments.each do |assignment| %>
      <li>
        <%= link_to assignment.user.name, user_path(assignment.user) %> -
        <%= link_to assignment.material.name, material_path(assignment.material) %> -
        <%= viewed_or_not(assignment) %>
      </li>
    <% end %>
  </ul>
<% end %>

<p>View your students</p>
<ul>
  <% @students.each do |student| %>
    <li><%= link_to student.name, student.correct_user_path %>
  <% end %>
</ul>


<%= link_to 'Sign Out', signout_path %>
