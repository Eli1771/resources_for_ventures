<h1>Signup</h1>

<%= form_for :user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label 'Course Level (0 - 4)' %>
  <%= f.number_field :course_level %><br>
  <%= f.label 'Check this box if you are an instructor' %>
  <input type="checkbox" name="user[is_teacher]" id="is_teacher"><br><br>

  <%= f.submit %>
<% end %>
